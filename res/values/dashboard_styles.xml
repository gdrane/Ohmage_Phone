<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--
	======================================================
	=== colors
	======================================================
	-->
    <color name="title_background">#ff358956</color>
    <color name="title_text">#ffffffff</color>
    <color name="title_text_alt">#ff000000</color>
    <color name="foreground1">#ff000000</color>
    <color name="foreground2">#ff70a381</color>
    <color name="background1">#ffffffff</color>
    <color name="background2">#ffd5ebdd</color>
    <color name="background3">#ffe3f1e8</color>
    <color name="title_separator">#40ffffff</color>
    
    <!--
    ======================================================
    === dimensions
    ======================================================
    -->
    <dimen name="title_height">45dip</dimen>
    
    <!--
    ======================================================
    === declarative styles
    ======================================================
    -->
    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_dash</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/foreground1</item>
        <item name="android:background">@null</item>

		<item name="android:drawableTop">@drawable/apple</item>
		<item name="android:paddingTop">32sp</item>
		<item name="android:paddingRight">5sp</item>
		<item name="android:drawablePadding">3sp</item>
		<!--<item name="android:width">60sp</item>-->
    </style>
    
    <style name="TitleBarLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="TitleBarLogoHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="TitleBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
     <style name="TitleBarSeparator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/title_separator</item>
    </style>
    
    <style name="TitleBarAction">
        <item name="android:layout_width">@dimen/title_height</item>
        <item name="android:layout_height">fill_parent</item>
        <!--- <item name="android:background">@null</item> -->
        <item name="android:background">@drawable/dashboard_title_button</item>
    </style>
    
    <!--
    ======================================================
    === string descriptions of buttons, etc.
    ======================================================
    -->
    <string name="description_logo">ohmage</string>
    <string name="description_logo_home">back to dashboard</string>
    <string name="description_search">Search</string>
</resources>
